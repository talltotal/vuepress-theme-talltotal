@require './config'

.arrow
  display inline-block
  width 0
  height 0
  position relative

  &::before,
  &::after
    content ""
    position absolute
    width 6px
    height 1.5px
    border-radius 2px
    background $arrowBgColor
    transition transform .2s cubic-bezier(.645,.045,.355,1),top .2s cubic-bezier(.645,.045,.355,1)

  &.up
    &::before
      transform rotate(-45deg) translateX(2px)
    &::after
      transform rotate(45deg) translateX(-2px)
  &.down
    &::before
      transform rotate(45deg) translateX(2px)
    &::after
      transform rotate(-45deg) translateX(-2px)
  &.right
    &::before
      transform rotate(-134deg) translateX(2px)
    &::after
      transform rotate(-45deg) translateX(-2px)
  &.left
    &::before
      transform rotate(-45deg) translateX(2px)
    &::after
      transform rotate(-134deg) translateX(-2px)
